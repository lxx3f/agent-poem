# ===================== 通用配置 =====================
PROJECT_NAME=shiyun
ENVIRONMENT=development  # dev/prod

# fastAPI
APP_NAME=PoemCloud
DEBUG=True
VERSION=0.1.0

# mysql数据库配置
MYSQL_DATABASE=cloud_poem_db
MYSQL_USER=user
MYSQL_PASSWORD=password123 # 替换为实际密码
MYSQL_ROOT_PASSWORD=password123 # 替换为实际密码
MYSQL_PORT=3306

# redis配置
REDIS_PASSWORD=123456             # Redis密码
REDIS_PORT=6379                   # 映射端口
REDIS_CONTAINER_PORT=6379         # 容器内端口
REDIS_DB=0                        # 默认数据库


# ===================== Milvus配置 =====================
MILVUS_PORT=19530                 # Milvus主端口
MILVUS_CONSOLE_PORT=9091          # Milvus控制台端口
MINIO_ACCESS_KEY=minioadmin       # MinIO访问密钥
MINIO_SECRET_KEY=minioadmin       # MinIO秘钥
MINIO_PORT=9000                   # MinIO端口
MINIO_CONSOLE_PORT=9001           # MinIO控制台端口

# 服务端口配置
BACKEND_PORT=8000
FRONTEND_PORT=8080
PHPMYADMIN_PORT=8081

# 服务器配置
SERVER_BASE_URL=http://localhost:8000
BACKEND_URL=http://backend:8000

# JWT配置
# 生成方法：python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=占位
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=45

# 内部API秘钥
# 生成方法：python -c "import secrets; print(secrets.token_urlsafe(32))"
INTERNAL_API_KEY=占位


# llm_provider
LLM_PROVIDER=qwen

# 阿里云服务配置
# 通义千问 API 密钥（用于文档向量化）
# 获取方式：
#   1. 访问 https://dashscope.console.aliyun.com/
#   2. 登录阿里云账号，开通 DashScope 服务
#   3. 在 API-KEY 管理页面创建密钥
#   4. 复制密钥到下方（格式：sk-xxxxxxxxxxxxxxxxxxxxxxxx）
QWEN_API_KEY=sk-your-dashscope-api-key-here
QWEN_MODEL=qwen-turbo
