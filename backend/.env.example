# 复用根目录的数据库配置（容器内访问用容器名，而非localhost）
MYSQL_URL=mysql+pymysql://root:${MYSQL_ROOT_PASSWORD}@mysql:${MYSQL_CONTAINER_PORT}/${MYSQL_DATABASE}

# 复用Redis配置
REDIS_HOST=redis
REDIS_PORT=${REDIS_CONTAINER_PORT}
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=${REDIS_DB}

# 复用Milvus配置
MILVUS_HOST=milvus-standalone
MILVUS_PORT=19530
MILVUS_COLLECTION=poetry_embedding

# 复用OpenAI配置
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_MODEL=${OPENAI_MODEL}

# 阿里云API_KEY
QWEN_API_KEY=${QWEN_API_KEY}
QWEN_MODEL=${QWEN_MODEL}

# API配置
API_PREFIX=/api/v1
DEBUG=${ENVIRONMENT} == "development"